.col
  %div.mb-2.mt-2.px-3.rounded-circle
    = link_to root_path, class: 'd-flex align-items-center' do
      = image_tag 'tweeter', class: 'position-relative', style: "bottom: 4px", width: '25'
  %div.side-navbar
    %div.mb-3.px-3.rounded-pill
      = link_to root_path, class: 'd-flex align-items-center' do
        %span
          = image_tag 'home', class: 'position-relative', style: "bottom: 2px", width: '20'
        %span.fs-4.px-4
          Home
    %div.mb-3.px-3.rounded-pill
      = link_to root_path, class: 'd-flex align-items-center' do
        %span
          = image_tag 'hashtag', class: 'position-relative', style: "bottom: 2px", width: '20'
        %span.fs-4.px-4
          Explore
    %div.mb-3.px-3.rounded-pill
      = link_to root_path, class: 'd-flex align-items-center' do
        %span
          = image_tag 'bell', class: 'position-relative', style: "bottom: 2px", width: '20'
        %span.fs-4.px-4
          Notification
    %div.mb-3.px-3.rounded-pill
      = link_to root_path, class: 'd-flex align-items-center' do
        %span
          = image_tag 'message', class: 'position-relative', style: "bottom: 2px", width: '20'
        %span.fs-4.px-4
          Messages
    %div.mb-3.px-3.rounded-pill
      = link_to root_path, class: 'd-flex align-items-center' do
        %span
          = image_tag 'bookmark', class: 'position-relative', style: "bottom: 2px", width: '20'
        %span.fs-4.px-4
          Bookmarks
    %div.mb-3.px-3.rounded-pill
      = link_to root_path, class: 'd-flex align-items-center' do
        %span
          = image_tag 'profile', class: 'position-relative', style: "bottom: 2px", width: '20'
        %span.fs-4.px-4
          Profile
  %div.mb-3
    %span.fs-4.px-2.py-4
      = button_tag "Tweet", class: 'btn btn-primary btn-twitter btn-lg rounded-pill w-50 border-0', data: { "bs-toggle": "modal", "bs-target": "#exampleModal"}
  %div    
    = link_to "Log out", destroy_user_session_path, data: {"turbo-method": :delete}, class: 'btn btn-primary btn-lg' 

-# Tweet Form Modal
%div.modal#exampleModal{tabindex:"-1", aria: {labelledby:"exampleModalLabel", hidden:"true"}}
  %div.modal-dialog
    %div.modal-content
      %div.modal-header.border-bottom-0
        = button_tag '', class: 'btn-close m-0', data: {bs_dismiss: 'modal'}, aria: {label: 'Close'}
      %div.modal-body
        = render 'shared/tweet_form'